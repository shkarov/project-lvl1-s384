#!/usr/bin/env php
<?php
use BrainGames\Funcs;
use BrainGames\CheckParity;
use BrainGames\Calc;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$name = Funcs\hello();

$isOK = false;
\cli\line('1. Parity check');
\cli\line('2. Calculator');
$game = \cli\prompt('Select game');
switch ($game) {
    case "1":
        $isOK = CheckParity\check();
        break;
    case "2":
        $isOK = BrainGames\Calc\calc();
        break;
}
Funcs\by($name, $isOK);